<Page x:Class="Desktop.Views.Pages.SellMedicines"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      MinHeight="609" MinWidth="902"    
      Title="SellMedicines" Background="White">

    <Border BorderThickness="2" BorderBrush="#FF182634">

        <Grid>

            <Grid.RowDefinitions>

                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>

            </Grid.RowDefinitions>
            <Border BorderThickness="0,2,0,0" BorderBrush="#FF182634">
                <Grid Grid.Row="0" Background="#FF39B9B9">

                    <TextBlock Text="Sell medicines" Foreground="#FF182634" FontFamily="Comfortaa" FontSize="28" HorizontalAlignment="Center" Margin="0,20"/>
                    <Button Content="Done" Width="100" Height="32" HorizontalAlignment="Right" Margin="0,0,20,0" Background="White" BorderBrush="White" Foreground="#FF39B9B9" FontSize="14" FontWeight="Bold" FontFamily="Comfortaa"/>
                </Grid>
            </Border>


            <Grid Grid.Row="1" Height="40">

                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>

                <Label Grid.Column="0" Content="Medicine" HorizontalAlignment="Center" FontSize="16" FontFamily="Comfortaa"  Foreground="#FF182634" VerticalAlignment="Center"/>
                <Label Grid.Column="1" Content="Count" HorizontalAlignment="Center" FontSize="16" FontFamily="Comfortaa"  Foreground="#FF182634" VerticalAlignment="Center"/>

            </Grid>

            <ListView Grid.Row="2" ItemsSource="{Binding SellingItems}">

                <ListViewItem>

                    <DataTemplate>

                        <Grid Height="40">

                            <Grid.ColumnDefinitions>

                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="*" />

                            </Grid.ColumnDefinitions>

                            <Label Grid.Column="0" Content="{Binding Key}" HorizontalAlignment="Center" FontSize="16" FontFamily="Comfortaa"  Foreground="#FF182634" VerticalAlignment="Center"/>
                            <Label Grid.Column="1" Content="{Binding Value}" HorizontalAlignment="Center" FontSize="16" FontFamily="Comfortaa"  Foreground="#FF182634" VerticalAlignment="Center"/>

                        </Grid>

                    </DataTemplate>

                </ListViewItem>

            </ListView>

            <Grid Grid.Row="3" Height="60">
                
                <Grid.ColumnDefinitions>

                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>

                </Grid.ColumnDefinitions>

                <TextBox Grid.Column="0" Height="25" Text="{Binding AddingItem.Key}" BorderBrush="#FF39B9B9" CaretBrush="#FF182634" Foreground="#FF182634" FontSize="14" FontFamily="Comfortaa" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" TextWrapping="NoWrap"  Padding="5, 2" Margin="20,0"/>
                <TextBox Grid.Column="1" Height="25" Text="{Binding AddingItem.Value}" BorderBrush="#FF39B9B9" CaretBrush="#FF182634" Foreground="#FF182634" FontSize="14" FontFamily="Comfortaa" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" TextWrapping="NoWrap"  Padding="5, 2" Margin="20,0"/>

                <Button Grid.Column="2" Content="Add" BorderBrush="{x:Null}" Background="#FF39B9B9" Width="80" Click="AddItemButton_Click" Margin="20,0,20,0"/>

            </Grid>

        </Grid>

    </Border>
    
</Page>
