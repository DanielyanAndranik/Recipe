<Page x:Class="Desktop.Views.Pages.LoadPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Views.Pages"
      xmlns:fa="http://schemas.fontawesome.io/icons/"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoadPage">

    <Grid Background="#FF39B9B9">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.0*"/>
            <RowDefinition Height="0.1*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
            
        <fa:ImageAwesome Grid.Row="0" Icon="Spinner" Spin="True" SpinDuration="2" Foreground="White"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center" Width="200" Height="200"/>
        <Label Grid.Row="1" Content="{DynamicResource load_msg0}" Foreground="White"
               HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
        <Label Grid.Row="2" Content="{DynamicResource load_msg1}" Foreground="White"
               HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20"/>
    </Grid>
</Page>
