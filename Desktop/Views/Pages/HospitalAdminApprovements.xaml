<Page x:Class="Desktop.Views.Pages.HospitalAdminApprovements"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Desktop.Views.Pages"
      mc:Ignorable="d" 
      MinWidth="902" MinHeight="609" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HospitalAdminApprovements" Background="White">

    <Border BorderBrush="#FF182634" BorderThickness="2">

        <Grid>

            <Grid.RowDefinitions>

                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Height="50">

                <TextBlock Text="Waiting for approval" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF182634" FontFamily="Comfortaa" FontSize="18" />

            </Grid>

            <Grid Grid.Row="1">

                    <ListView VerticalAlignment="Top" ItemsSource="{Binding WaitingCollection}">

                        <ListView.ItemTemplate>

                            <DataTemplate>

                            <Grid Height="80" VerticalAlignment="Top" Background="#FF39B9B9" >

                                <Grid.ColumnDefinitions>

                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>

                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Text="{Binding FullName}" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center" FontSize="14" Foreground="White" FontFamily="Comfortaa"/>

                                <TextBlock Grid.Column="1" Text="{Binding License}" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center" FontSize="14" Foreground="White" FontFamily="Comfortaa"/>

                                <TextBlock Grid.Column="2" Text="{Binding Specification}" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center" FontSize="14" Foreground="White" FontFamily="Comfortaa"/>

                                <TextBlock Grid.Column="3" Text="{Binding StartedWork}" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center" FontSize="14" Foreground="White" FontFamily="Comfortaa"/>

                                <TextBlock Grid.Column="4" Text="{Binding ProfileCreatedOn}" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" VerticalAlignment="Center" FontSize="14" Foreground="White" FontFamily="Comfortaa"/>

                                <StackPanel Grid.Column="5">

                                    <Button Content="Approve" BorderBrush="{x:Null}" Background="#FF29D617" Width="100" Height="30" Margin="0,5" Command="{Binding ApproveDoctorCommand}" CommandParameter="{Binding Id}"/>
                                    <Button Content="Deny" BorderBrush="{x:Null}" Background="#FFFF2A2A" Width="100" Height="30" Margin="0,5" />

                                </StackPanel>

                            </Grid>

                        </DataTemplate>
                            
                        </ListView.ItemTemplate>
                        
                    </ListView>
                    
                               
            </Grid>
            
        </Grid>

    </Border>
    
</Page>
